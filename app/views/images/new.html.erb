<%= render(PageComponent.new(subject: @imageable)) do |component| %>
  <%= component.with(:header) { render(Page::HeaderComponent.new(title: "Upload Images", subtitle: "for #{@imageable.imageable_name}")) } %>
  <% component.with(:body) do %>
    <%= render "/images/form_upload", imageable: @imageable %>
    <%= render "/images/upload_instructions" %>
  <% end %>
<% end %>
