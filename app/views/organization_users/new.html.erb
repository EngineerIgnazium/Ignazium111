<%= render(PageComponent.new(subject: @organization)) do |component| %>
  <% component.with(:header) do %>
    <%= render(Page::HeaderComponent.new(title: "Adding Member", subtitle: "Fill out the form below")) %>
  <% end %>
  <% component.with(:body) do %>
    <%= render "/organization_users/form",
      organization: @organization,
      organization_user: @organization_user,
      url: new_organization_user_path(@organization, @organization_user) %>
  <% end %>
<% end %>
