<div class="empty-state">
  <div class="empty-state-container">
    <div class="state-figure">
      <%= image_pack_tag "illustrations/error-404.svg", class: "img-fluid", height: 124, alt: "404 Error Illustration" %>
    </div>
    <h3 class="state-header"> <%= title %> </h3>
    <p class="state-description lead text-muted"> <%= message %> </p>
    <div class="state-action">
      <%= link_to root_path, class: "btn btn-lg btn-light" do %>
        <i class="fa fa-angle-right"></i> Go Home
      <% end %>
    </div>
  </div>
</div>
