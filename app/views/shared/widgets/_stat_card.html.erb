<div class="col-12 col-sm-6 col-lg-3">
  <div class="card-metric">
    <div class="metric">
      <% if local_assigns[:icon].present? %>
        <p class="metric-value h3 <%= color %>">
          <sub><i class="<%= icon %>"></i></sub> <span class="value"><%= value %></span>
        </p>
      <% else %>
        <p class="metric-value h2"><%= value %></p>
      <% end %>
      <h2 class="metric-label"><%= label %></h2>
    </div>
  </div>
</div>
