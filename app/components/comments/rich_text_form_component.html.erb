<%= simple_form_for(:comment, url: comments_path, method: :post, wrapper: :front_form) do |f| %>
  <div class="row">
    <%= f.hidden_field :sgid, value: commentable.to_sgid %>
    <%= tag.div f.input(:content, as: :rich_text_area, label: false, required: true, input_html: {rows: 2, class: "form-control"}), class: "col-12 mb-3" %>
  </div>
  <div class="d-flex justify-content-end">
    <%= f.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>
